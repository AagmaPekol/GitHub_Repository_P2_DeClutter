<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".wardrobe.WardrobeDecision">
    <include layout="@layout/template_4_wardrobe">
    </include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="110dp"
        android:layout_marginBottom="80dp"
        android:elevation="1dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/btn_blue_v1"
            android:layout_marginHorizontal="50dp"
            android:layout_marginVertical="50dp"
            android:gravity="center_horizontal"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">
            <Button
                android:id="@+id/donateBtn"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Donate Wardrobe"
                android:elevation="10dp"
                android:background="@drawable/btn_transparent"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="50dp"/>

            <Button
                android:id="@+id/keepBtn"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Keep Wardrobe"
                android:elevation="10dp"
                android:background="@drawable/btn_transparent"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
            <Button
                android:id="@+id/sellBtn"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Sell Wardrobe"
                android:elevation="10dp"
                android:background="@drawable/btn_transparent"/>
        </LinearLayout>


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>