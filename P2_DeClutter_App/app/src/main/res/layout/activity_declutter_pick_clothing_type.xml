<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".declutterStep1.Declutter_PickClothingType">

    <include layout="@layout/template_main">

    </include>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="1dp"
        android:orientation="vertical"
        android:paddingTop="126dp"
        android:paddingBottom="80dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="50dp"
            android:src="@drawable/wardrobecutout">
        </ImageView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="1dp"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingBottom="70dp"
        android:paddingTop="60dp">

        <Button
            android:id="@+id/tShirtBtn"
            android:layout_width="88dp"
            android:layout_height="48dp"
            android:background="@drawable/btn_transparent"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/andada_pro2"
            android:text="T-Shirts"
            android:textStyle="bold"
            android:textColor="@color/Text_dark_green"
            android:layout_marginBottom="30dp"
            android:translationX="-60dp"
            android:alpha="0.85"/>

        <Button
            android:id="@+id/dressBtn"
            android:layout_width="88dp"
            android:layout_height="48dp"
            android:background="@drawable/btn_transparent"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/andada_pro2"
            android:text="Dresses"
            android:textStyle="bold"
            android:textColor="@color/Text_dark_green"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="60dp"
            android:translationX="30dp"
            android:alpha="0.85"/>

        <Button
            android:id="@+id/pantsBtn"
            android:layout_width="88dp"
            android:layout_height="48dp"
            android:background="@drawable/btn_transparent"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/andada_pro2"
            android:text="Pants"
            android:textStyle="bold"
            android:textColor="@color/Text_dark_green"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:translationX="-30dp"
            android:alpha="0.85"/>

        <Button
            android:id="@+id/hoodieBtn"
            android:layout_width="88dp"
            android:layout_height="48dp"
            android:background="@drawable/btn_transparent"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/andada_pro2"
            android:text="Hoodies"
            android:textStyle="bold"
            android:textColor="@color/Text_dark_green"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:translationX="40dp"
            android:alpha="0.85"/>
    </LinearLayout>

