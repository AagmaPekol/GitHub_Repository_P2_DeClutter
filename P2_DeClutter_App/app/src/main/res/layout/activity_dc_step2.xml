<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".declutterStep2.dc_step2">
    <include layout="@layout/template_2">
    </include>
    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="1dp"
        android:orientation="vertical"
        android:layout_marginTop="110dp"
        android:layout_marginBottom="80dp">

        <ImageView
            android:layout_width="328dp"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="20"
            android:src="@drawable/shirts_step2"
            android:layout_marginTop="5dp">
        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Step 2."
                android:textStyle="bold"
                android:textSize="38dp"
                android:textColor="@color/Text_dark_green"
                android:layout_weight="5"
                android:layout_gravity="start"
                android:gravity="bottom"
                android:paddingLeft="20dp">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pick out and focus on each individual piece, one at a time. On the following screens, you will take a picture, describe the piece and sort it into one of 3 groups"
                android:layout_weight="20"
                android:textSize="20dp"
                android:textColor="@color/Text_dark_green"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp">
            </TextView>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_weight="2"
            android:orientation="horizontal">
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5">
            </View>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:paddingTop="10dp"
                android:layout_weight="10"
                android:src="@drawable/man_bottom_step2">
            </ImageView>
            <ImageButton
                android:id="@+id/continueBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:layout_weight="5"
                android:src="@drawable/ic_next_orangebtn_foreground"
                android:layout_gravity="bottom"
                android:paddingStart="2dp"
                android:paddingEnd="0dp"
                android:contentDescription="Go Next">
            </ImageButton>
        </LinearLayout>

    </LinearLayout>


  </androidx.constraintlayout.widget.ConstraintLayout>