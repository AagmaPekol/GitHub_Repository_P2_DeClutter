<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDEED9"
    tools:context=".JuliasTemplate">


    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="256dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.568">

        <Button
            android:id="@+id/declutterBtn2"
            android:layout_width="220dp"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="30dp"
            android:layout_weight="1"
            android:background="@drawable/btn_blue_v1"
            android:fontFamily="@font/andada_pro2"
            android:gravity="center"
            android:padding="10dp"
            android:text="Declutter"
            android:textAllCaps="false"
            android:textColor="#3C543B"
            android:textColorLink="#FBFFFFFF"
            android:textSize="25sp" />

        <Button
            android:id="@+id/wardrobeBtn2"
            android:layout_width="220dp"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="30dp"
            android:layout_weight="1"
            android:background="@drawable/btn_green_v1"
            android:fontFamily="@font/andada_pro2"
            android:gravity="center"
            android:padding="10dp"
            android:text="Wardrobe"
            android:textAllCaps="false"
            android:textColor="#3C543B"
            android:textColorLink="#FBFFFFFF"
            android:textSize="25sp" />

        <Button
            android:id="@+id/wardrobeBtn3"
            android:layout_width="220dp"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"

            android:layout_weight="1"
            android:background="@drawable/btn_brown_v1"
            android:fontFamily="@font/andada_pro2"
            android:gravity="center"
            android:padding="10dp"
            android:text="Rewards"
            android:textAllCaps="false"
            android:textColor="#3C543B"
            android:textColorLink="#FBFFFFFF"
            android:textSize="25sp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>