<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDEED9"
    tools:context=".JuliasTemplate">

    <FrameLayout
        android:layout_width="412dp"
        android:layout_height="190dp"
        android:layout_gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.043">

        <!-- middle squares-->
        <View
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:background="@drawable/bg_top_diamonds"
            android:elevation="2dp"
            android:rotation="45"
            android:translationX="141dp"
            android:translationY="28dp" />

        <View
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:background="@drawable/bg_top_diamonds"
            android:elevation="2dp"
            android:rotation="45"
            android:translationX="220dp"
            android:translationY="28dp" />

        <!-- front center square-->
        <View
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:background="@drawable/bg_top_diamonds"
            android:elevation="3dp"
            android:rotation="45"
            android:translationX="136dp"
            android:translationY="15dp" />

        <!-- back squares-->
        <View
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/bg_top_diamonds"
            android:elevation="1dp"
            android:rotation="45"
            android:translationX="0dp"
            android:translationY="0dp" />

        <View
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/bg_top_diamonds"
            android:elevation="1dp"
            android:rotation="45" />


    </FrameLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="407dp"
        android:layout_height="263dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498">

        <Button
            android:id="@+id/declutterBtn2"
            android:layout_width="220dp"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="30dp"
            android:layout_weight="1"
            android:background="@drawable/btn_blue_v1"
            android:fontFamily="@font/andada_pro2"
            android:gravity="center"
            android:padding="10dp"
            android:text="Declutter"
            android:textAllCaps="false"
            android:textColor="#3C543B"
            android:textColorLink="#FBFFFFFF"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/wardrobeBtn2"
            android:layout_width="220dp"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="30dp"
            android:layout_weight="1"
            android:background="@drawable/btn_green_v1"
            android:fontFamily="@font/andada_pro2"
            android:gravity="center"
            android:padding="10dp"
            android:text="Wardrobe"
            android:textAllCaps="false"
            android:textColor="#3C543B"
            android:textColorLink="#FBFFFFFF"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/wardrobeBtn3"
            android:layout_width="220dp"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@drawable/btn_brown_v1"
            android:fontFamily="@font/andada_pro2"
            android:gravity="center"
            android:padding="10dp"
            android:text="Rewards"
            android:textAllCaps="false"
            android:textColor="#3C543B"
            android:textColorLink="#FBFFFFFF"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="220dp"
        android:layout_height="100dp"
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">


        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="90dp"
            android:layout_height="75dp"
            android:layout_gravity="start"
            android:layout_marginStart="0dp"
            android:background="@drawable/btn_brown_v1"
            android:contentDescription="Stats"
            android:padding="10dp"
            app:srcCompat="@drawable/basic_man" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="90dp"
            android:layout_height="75dp"
            android:layout_gravity="end"
            android:layout_marginEnd="0dp"
            android:background="@drawable/btn_brown_v1"
            android:contentDescription="Profile"
            android:padding="10dp"
            app:srcCompat="@drawable/basic_man" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>