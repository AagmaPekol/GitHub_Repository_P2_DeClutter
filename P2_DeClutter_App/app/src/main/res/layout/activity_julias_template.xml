<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDEED9"
    tools:context=".JuliasTemplate">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/mainTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:elevation="20dp"
            android:fontFamily="sans-serif-medium"
            android:rotation="-8"
            android:text="MightyTidy"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:textStyle="bold|italic"
            android:translationY="58dp" />

        <TextView
            android:id="@+id/extraTitle"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:elevation="20dp"
            android:rotation="-8"
            android:text="Your personal declutter assistant"
            android:textAlignment="center"
            android:textSize="10sp"
            android:translationX="30dp"
            android:translationY="93dp" />


        <!-- middle squares-->
        <View
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_top_diamonds_br"
            android:elevation="8dp"
            android:rotation="45"
            android:translationX="80dp"
            android:translationY="29dp" />

        <View
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_top_diamonds_br"
            android:elevation="8dp"
            android:rotation="45"
            android:translationX="-80dp"
            android:translationY="29dp" />

        <!-- front center square-->
        <View
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_top_diamonds_gr"
            android:elevation="10dp"
            android:rotation="45" />

        <!-- back squares-->
        <View
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_top_diamonds_bl"
            android:elevation="4dp"
            android:rotation="45"
            android:translationX="150dp"
            android:translationY="40dp" />

        <View
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_top_diamonds_bl"
            android:elevation="4dp"
            android:rotation="45"
            android:translationX="-150dp"
            android:translationY="40dp" />


    </FrameLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="263dp"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.523">

        <Button
            android:id="@+id/declutterBtn2"
            android:layout_width="220dp"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@drawable/btn_blue_v1"
            android:fontFamily="@font/andada_pro2"
            android:gravity="center"
            android:padding="10dp"
            android:text="Declutter"
            android:textAllCaps="false"
            android:textColor="#3C543B"
            android:textColorLink="#FBFFFFFF"
            android:textSize="30sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.4" />

        <Button
            android:id="@+id/wardrobeBtn2"
            android:layout_width="220dp"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@drawable/btn_green_v1"
            android:fontFamily="@font/andada_pro2"
            android:gravity="center"
            android:text="Wardrobe"
            android:textAllCaps="false"
            android:textColor="#3C543B"
            android:textColorLink="#FBFFFFFF"
            android:textSize="30sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.4" />

        <Button
            android:id="@+id/wardrobeBtn3"
            android:layout_width="220dp"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@drawable/btn_brown_v1"
            android:fontFamily="@font/andada_pro2"
            android:text="Rewards"
            android:textAllCaps="false"
            android:textColor="#3C543B"
            android:textColorLink="#FBFFFFFF"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">


        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="90dp"
            android:layout_height="65dp"
            android:layout_gravity="start"
            android:layout_marginStart="0dp"
            android:background="@drawable/btn_orange_v1"
            android:contentDescription="Stats"
            android:padding="10dp"
            app:srcCompat="@drawable/ic_statsv1_icon_foreground" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="90dp"
            android:layout_height="65dp"
            android:layout_gravity="end"
            android:layout_marginEnd="0dp"
            android:background="@drawable/btn_brown_v1"
            android:contentDescription="Profile"
            android:padding="10dp"
            app:srcCompat="@drawable/ic_basic_man" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent">

        <View
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:background="@drawable/bg_top_diamonds_gr"
            android:elevation="2dp"
            android:rotation="-65"
            android:layout_gravity="end"
            android:translationX="-20dp"
            android:translationY="85dp"/>
        <View
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:background="@drawable/bg_top_diamonds_bl"
            android:elevation="1dp"
            android:rotation="-65"
            android:layout_gravity="end"
            android:translationX="60dp"
            android:translationY="55dp"/>
    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>