<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".xxxTestingFeatures.ApiCallTest">

    <!-- EditText for user input -->
    <EditText
        android:id="@+id/editTextInput1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tell a story about this piece of clothing"
        android:padding="14dp"
        android:textSize="16sp"
        android:layout_weight="1"/>

    <!-- Button to trigger API call -->
    <Button
        android:id="@+id/btnGenerateResponse1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate Response"
        android:layout_below="@id/editTextInput1"
        android:layout_marginTop="16dp"
        android:layout_weight="1"/>

    <!-- TextView to display the AI-generated response -->
    <TextView
        android:id="@+id/textViewResponse1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnGenerateResponse1"
        android:layout_marginTop="16dp"
        android:textSize="18sp"
        android:text="Response will appear here"
        android:padding="10dp"
        android:layout_weight="1"/>
</LinearLayout>