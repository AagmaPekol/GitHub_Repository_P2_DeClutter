<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/template_main">
    </include>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="1dp"
        android:orientation="vertical"
        android:layout_marginTop="110dp"
        android:layout_marginBottom="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="top"
                android:text="Need some inspiration?"
                android:textStyle="bold"
                android:textColor="@color/Text_dark_green"
                android:fontFamily="@font/andada_pro2"
                android:textSize="28dp">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:translationX="-40dp">
            <WebView
                android:id="@+id/youtube1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp">
        </View>
        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:translationX="15dp">
            <WebView
                android:id="@+id/youtube2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:translationX="-30dp">
            <WebView
                android:id="@+id/youtube3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:gravity="bottom">
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5">
            </View>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:paddingTop="10dp"
                android:layout_weight="10">
            </ImageView>
            <ImageButton
                android:id="@+id/finish_button_keep"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:layout_weight="5"
                android:src="@drawable/ic_next_orangebtn_foreground"
                android:layout_gravity="bottom"
                android:paddingStart="2dp"
                android:paddingEnd="0dp"
                android:contentDescription="Go Next">
            </ImageButton>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>