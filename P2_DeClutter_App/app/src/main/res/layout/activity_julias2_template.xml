<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_lightGreen"
    tools:context=".Julias2Template">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <!-- blue square-->
        <View
            android:layout_width="160dp"
            android:layout_height="250dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_top_diamonds_bl"
            android:elevation="4dp"
            android:rotation="82"
            android:translationX="95dp"
            android:translationY="-120dp" />
        <!-- brown square-->
        <View
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_top_diamonds_br"
            android:elevation="8dp"
            android:rotation="78"
            android:translationX="-65dp"
            android:translationY="-20dp" />

        <!-- left green square-->
        <View
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/bg_top_diamonds_gr"
            android:elevation="10dp"
            android:rotation="70"
            android:translationX="-80dp"
            android:translationY="-100dp" />

        <ImageButton
            android:id="@+id/backBtn1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="start"
            android:elevation="12dp"
            android:background="@android:color/transparent"
            android:contentDescription="Back button"
            app:srcCompat="@drawable/ic_backarrow_icon_foreground" />

        <ImageButton
            android:id="@+id/settingsBtn1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="end"
            android:elevation="12dp"
            android:background="@android:color/transparent"
            android:contentDescription="Settings button"
            app:srcCompat="@drawable/ic_settings_icon_foreground" />

    </FrameLayout>




</androidx.constraintlayout.widget.ConstraintLayout>