<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".declutterStep2.Declutter_ClothingPicture">

    <include layout="@layout/template_main">
    </include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="126dp"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingTop="30dp">
        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:elevation="2dp"
            android:text="All Done"
            android:textColor="@color/Text_dark_green"
            android:background="@drawable/btn_orange_v1"
            android:paddingHorizontal="20dp"
            android:visibility="invisible" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="126dp"
        android:layout_marginBottom="80dp"
        android:elevation="1dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/takePhotoView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:layout_weight="45"
                tools:srcCompat="@drawable/pic_frame"/>
            <Button
                android:id="@+id/takePicture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Take Picture"
                android:textStyle="bold"
                android:elevation="5dp"
                android:paddingHorizontal="10dp"
                android:textColor="@color/Text_dark_green"
                android:background="@drawable/btn_green_v1"
                android:translationY="-30dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:orientation="horizontal"
            android:gravity="bottom">
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5">
            </View>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:paddingTop="10dp"
                android:layout_weight="10"
                android:src="@drawable/man_bottom_step2">
            </ImageView>
            <ImageButton
                android:id="@+id/continueBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:layout_weight="5"
                android:src="@drawable/ic_next_orangebtn_foreground"
                android:layout_gravity="bottom"
                android:paddingStart="2dp"
                android:paddingEnd="0dp"
                android:contentDescription="Go Next">
            </ImageButton>
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>