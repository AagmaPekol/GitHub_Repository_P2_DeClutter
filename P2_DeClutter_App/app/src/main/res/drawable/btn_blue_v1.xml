<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dp" />
            <stroke android:width="0.5dip" android:color="#939E87" />
            <gradient android:angle="-90" android:startColor="#BDE2D2" android:endColor="#B0D2C3"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="10dp" />
            <stroke android:width="0.5dip" android:color="#939E87" />
            <solid android:color="#B0D2C3"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dp" />
            <stroke android:width="0.5dip" android:color="#939E87" />
            <gradient android:angle="-90" android:startColor="#BDE2D2" android:endColor="#BDE2D2" />
        </shape>
    </item>
</selector>