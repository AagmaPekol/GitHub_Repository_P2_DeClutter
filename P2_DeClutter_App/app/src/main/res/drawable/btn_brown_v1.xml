<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dp" />
            <stroke android:width="0.8dip" android:color="@color/vector_brown_border" />
            <gradient android:angle="-90" android:startColor="@color/vector_brown_main" android:endColor="@color/vector_brown_darkerGradient"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="10dp" />
            <stroke android:width="0.8dip" android:color="@color/vector_brown_border" />
            <solid android:color="@color/vector_brown_darkerGradient"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dp" />
            <stroke android:width="0.8dip" android:color="@color/vector_brown_border" />
            <gradient android:angle="-90" android:startColor="@color/vector_brown_main" android:endColor="@color/vector_brown_main" />
        </shape>
    </item>
</selector>