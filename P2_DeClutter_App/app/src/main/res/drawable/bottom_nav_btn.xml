<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <gradient
                android:type="radial"
                android:gradientRadius="50%p"
                android:startColor="@color/background_lightGreen"
                android:endColor="@color/vector_green_main" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <solid android:color="@color/vector_green_main"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle" >
            <gradient android:angle="90" android:startColor="@color/vector_green_main" android:endColor="@color/vector_green_main"  />
        </shape>
    </item>
</selector>